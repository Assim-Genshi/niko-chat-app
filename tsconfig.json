{
  "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "lib": ["dom", "dom.iterable", "esnext"],
      "jsx": "react-jsx",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "incremental": true,
      "baseUrl": ".",
      "paths": {
          "@/*": ["src/*"]
      }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"],
  "exclude": ["node_modules"]
}
